document.getElementById("register-form").addEventListener("submit", async function(event) {
    event.preventDefault(); // Prevent default form submission

    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());

    try {
        const response = await fetch("http://localhost:5500/auth/register", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
        });

        // Ensure response is valid JSON
        const text = await response.text(); // Read raw response
        console.log("Raw response:", text); // Debugging

        const result = text ? JSON.parse(text) : {}; // Parse only if not empty
        console.log("Parsed JSON:", result);

        if (response.ok) {
            alert(result.message || "Registration successful!"); // Show message or default
            this.reset(); // Clear form fields
            document.getElementById("register-form-container").style.display = "none"; // Hide form
        } else {
            alert(result.message || "Registration failed. Please try again.");
        }

    } catch (error) {
        console.error("Error:", error);
        alert("Registration failed. Please try again.");
    }
});


