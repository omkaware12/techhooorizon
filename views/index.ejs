            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 50px 15px;
        }
        .banner-content h1 {
            font-size: 2.8rem;
            font-weight: bold;
            color: #2d3748; /* Dark text color */
        }
        .banner-content p {
            font-size: 1.2rem;
            color: #4a5568; /* Slightly lighter text */
            max-width: 700px;
            margin: 0 auto;
        }
        .feature-icon {
            font-size: 2rem;
            color: #6b46c1; /* Purple shade */
        }
        .rounded-btn {
            border-radius: 30px;
            padding: 10px 25px;
            font-weight: bold;
        }
        .outline-btn {
            background-color: white;
            color: #6b46c1;
            border: 2px solid #6b46c1;
        }
        .solid-btn {
            background-color: #6b46c1;
            color: white;
        }
        .benefits-section {
    background-color: #faf5ff; /* Light purple background */
    color: #2d3748; /* Dark gray text */
        }
        .benefits-title {
            font-size: 2rem;
            font-family: 'Georgia', serif;
        }
