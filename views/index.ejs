    <style>

         body {
            background-color: #faf5ff; /* Light purple background */
            color: #1a202c; /* Dark gray text */
            font-family: 'Georgia', serif;
            overflow: auto;
        }
        body::-webkit-scrollbar {
    display: none; /* Hides scrollbar in Chrome, Safari, and Edge */
} 


        .hero {
            background: url('sample3.jpg') no-repeat center center/cover;
            height: 100vh;
            display: flex;
            align-items: center;
            color: white;
            position: relative;
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }
        .hero-content {
            position: relative;
            z-index: 2;
        }
        .hero-content h1{
            color: #ffffff;
        }
                .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: transparent !important;
            transition: background-color 0.4s ease-in-out, transform 0.4s ease-in-out;
            z-index: 1000;
        }

        /* When scrolling down, navbar fades out */
        .navbar.hidden {
            transform: translateY(-100%);
            opacity: 0;
        }

        /* When scrolling up, navbar becomes visible with a black background */
        .navbar.scrolled {
            background: rgba(0, 0, 0, 0.9) !important; /* Semi-transparent black */
            transform: translateY(0);
            opacity: 1;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

        .navbar-dark .navbar-nav .nav-link {
            color: white;
        }
