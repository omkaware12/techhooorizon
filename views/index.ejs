                <option value="institute">Institute</option>
                <option value="donor">Donor</option>
                <option value="supplier">Supplier</option>
              </select>
            </div>
  
            <button type="submit" class="btn btn-primary w-100">Register</button>
          </form>
        </div>
      </div>
    </div>
