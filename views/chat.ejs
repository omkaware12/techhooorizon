<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container mt-4">
        <h3 class="text-center">AI Chatbot (Gemini)</h3>
        <input type="text" id="userInput" class="form-control" placeholder="Ask something...">
        <button class="btn btn-primary mt-2" onclick="askGemini()">Ask</button>
        <p id="aiResponse" class="mt-3"></p>
    </div>
    
    <script>
        async function askGemini() {
            const message = document.getElementById("userInput").value;
            const response = await fetch("/gemini/ask", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ message })
            });
            const data = await response.json();
            document.getElementById("aiResponse").innerText = "AI: " + data.reply;
        }
    </script>
</body>
</html>
