    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        thead tr th {
    background-color: #007bff !important;
    color: white;
    text-align: left;
    padding: 10px;
}
        body {
            background-color: #f4f6f9;
            font-family: 'Arial', sans-serif;
        }
        .navbar {
            padding: 15px;
        }
        .navbar .container-fluid {
            gap: 15px;
        }
        .containeroo {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            color: #333;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }
        .table {
            border-radius: 10px;
            overflow-x: auto;
        }
        th {
            background-color: #007bff !important;
            color: white !important;
        }
        .btn-primary {
            font-weight: bold;
        }
        .img-thumbnail {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 10px;
        }
       
        @media (max-width: 768px) {
            .table thead {
                display: none;
            }
            .table, .table tbody, .table tr, .table td {
                display: block;
                width: 100%;
            }
            .table tr {
                margin-bottom: 15px;
                border: 1px solid #ddd;
                padding: 10px;
                border-radius: 10px;
                background: white;
            }
            .table td {
                text-align: left;
                padding-left: 50%;
                position: relative;
            }
            .table td::before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                font-weight: bold;
                text-transform: uppercase;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid d-flex flex-wrap justify-content-between">
            <a class="navbar-brand" href="#">Logo</a>
            <div class="d-flex gap-3">
                <a href="http://localhost:3000/new/institute"><button class="btn btn-light">Create Institute</button></a>
                <a href="http://localhost:3000/"><button class="btn btn-light">Home</button></a>
                <a href="http://localhost:3000/user/institute"><button class="btn btn-light"> All Institutes</button></a>
            </div>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    User Dashboard
                </button>
                <ul class="dropdown-menu" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="containeroo mt-4">
        <h2>All Institutes</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead style="background-color: #007bff; color: white;">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Students</th>
                        <th>Accreditation</th>
                        <th>Vision</th>
                        <th>Mission</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Status</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    <% activeInstitutes.forEach(institute => { %>
                        <tr>
                            <td data-label="Image"><img src="<%= institute.image %>" alt="Institute Image" class="img-thumbnail"></td>
                            <td data-label="Name"><%= institute.name %></td>
                            <td data-label="Location"><%= institute.location %></td>
                            <td data-label="Students"><%= institute.students %></td>
                            <td data-label="Accreditation"><%= institute.accreditation %></td>
                            <td data-label="Vision"><%= institute.vision %></td>
                            <td data-label="Mission"><%= institute.mission %></td>
                            <td data-label="Latitude"><%= institute.lat %></td>
                            <td data-label="Longitude"><%= institute.lng %></td>
                            <td data-label="Status"><%= institute.status %></td>
                            <td data-label="Created At"><%= new Date(institute.createdAt).toLocaleDateString() %></td>
                            <td>
                                <a href="/donate/<%= institute.id %>" class="btn btn-primary">Donate</a>
                            </td>
                        </tr>
                    <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div>
    
